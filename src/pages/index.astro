---
import Layout from '~/layouts/PageLayout.astro';
import FAQs from "~/components/widgets/FAQs.astro";
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import anime from 'animejs/lib/anime.es.js';

const metadata = {
  title: 'Dialexicon',
  ignoreTitleTemplate: true,
};
---
<body style="background-color:#F9F6EE; background-position:cover; overflow-x:hidden">
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>


<Layout metadata={metadata}>
<div style="font-family:'Times New Roman', Times, serif;">
  <div style="height:100%">
    <div class="mt-20 ml-16 flex flex-row items-end gap-7">
        <!-- <span class="text-blue-900 font-bold text-9xl italic hover:not-italic" style="font-family:serif;"> Dialexicon </span> -->
        <h1 class="m17 text-blue-900 font-bold text-9xl italic hover:not-italic" style="font-family:serif;">
            <span class="letters">Dialexicon</span>
        </h1>
        <span class="text-blue-900 text-2xl mb-4" style="font-family:serif;"> Bringing philosophy to youth. </span>
    </div>

    <span class="text-blue-900 text-lg ml-16" style="font-family:serif;"> <span class="text-purple-700 font-bold">dialexicon </span> = <span class="text-blue-700 font-semibold">dialectic ('reasoning through opposition') </span> + <span class="text-red-700 font-semibold">lexicon ('vocabulary')</span></span>

    <div class="flex flex-row gap-4 absolute right-14 top-10 font-regular text-black">
      <a href="/" class="text-xl italic" style="font-family:serif">Home </a>
        <a href="./about" class="text-xl" style="font-family:serif">About </a>
        <a href="./journal" class="text-xl hover:italic" style="font-family:serif"> Journal </a>
        <a href="./submit" class="text-xl hover:italic" style="font-family:serif"> Submit </a>
    </div>
    
    <div class="px-8 2xl:max-w-7xl mx-auto py-7 ml-7 mr-7">
    <div class="space-y-1 mt-1">
      <div
        class="h-0.5 bg-blue-800"
        data-aos="fade-up"
        data-aos-duration="1000">
      </div>
    </div>
    <ul
      class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-blue-900 md:grid-cols-3 lg:grid-cols-4 items-start gap-6 mt-4"
      role="list">
      <li class="flow-root h-full" data-aos="fade-up" data-aos-duration="1500">
        <a href="./journal">
          <div class="h-full flex flex-col justify-between hover:text-blue-700 hover:border-4 rounded-3xl p-4 hover:border-blue-700">
            <div>
              <!-- <p
                class="bg-url(./src/images/1024px-School-of-athens2.jpg) ml-5 hover:text-black group-hover:hover:text-black text-secondary text-9xl font-bold lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0">
                01.
              </p> -->
              <img src="src/images/DP-13139-001-1.jpg" alt="Death of Socrates" class="mt-5 opacity-100 hover:opacity-70 rounded-3xl object-cover object-top overflow-hidden h-52 w-48 xl:h-72 xl:w-72 mb-5 ">
              <div class="ml-1">
              <p class="italic font-semibold shrink-0">JOURNAL</p>
              <p class="text-md mt-3 leading-relaxed w-72">
                Our annual journal publishes philosophical writing from high school students.
              </p>
              </div>
            </div>
            <div>
              <p class="ml-1 mt-3 text-md font-semibold">
                read our journal
              </p>
            </div>
          </div>
        </a>
      </li>
      <li class="flow-root h-full" data-aos="fade-up" data-aos-duration="2000">
        <a href="https://open.spotify.com/show/6ab9iObuaUb0VDo4R9lLH4">
          <div class="h-full flex flex-col justify-between hover:text-blue-700 hover:border-4 rounded-3xl p-4 hover:border-blue-700">
            <div>
              <!-- <p
                class="ml-5 hover:text-black group-hover:text-secondary/70 text-secondary text-9xl font-bold lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0">
                02.
              </p> -->
              <img src="src/images/the-philosophers-master-of-the-judgment-of-solomon.jpg" alt="Death of Socrates" class="mt-5 opacity-100 hover:opacity-70 rounded-3xl object-cover object-center overflow-hidden h-52 w-48 xl:h-72 xl:w-72 mb-5 ">
              <div class="ml-1">
              <p class="italic font-semibold shrink-0">PODCAST</p>
              <p class="text-md mt-3 leading-relaxed">
                We interview philosophers of all backgrounds
                and our published authors.
              </p>
              </div>
            </div>
            <div>
              <p class="ml-1 mt-3 text-md font-semibold">
                listen to our podcast
              </p>
            </div>
          </div>
        </a>
      </li>
      <li class="flow-root h-full" data-aos="fade-up" data-aos-duration="2500">
        <a href="https://discord.com/invite/J5RzXgQRWK">
          <div class="h-full flex flex-col justify-between hover:text-blue-700 hover:border-4 rounded-xl p-4 hover:border-blue-700">
            <div>
              <!-- <p
                class="ml-5 hover:text-black group-hover:text-secondary/70 text-secondary text-9xl font-bold lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0">
                03.
              </p> -->
              <img src="/src/images/aristotle-and-plato-school-of-athens-raphael.jpg" alt="Death of Socrates" class="mt-5 opacity-100 hover:opacity-70 rounded-3xl object-cover object-top overflow-hidden h-52 w-48 xl:h-72 xl:w-72 mb-5 ">
              <div class="ml-1">
              <p class="italic font-semibold shrink-0">COMMUNITY</p>
              <p class="text-md mt-3 leading-relaxed">
                Chat philosophy with other youth on our Discord,
                and ask journal-related questions.
              </p>
              </div>
            </div>
            <div>
              <p class="ml-1 mt-3 text-md font-semibold">
                join the discord
              </p>
            </div>
          </div>
        </a>
      </li>
      <li class="flow-root h-full" data-aos="fade-up" data-aos-duration="3000">
        <a href="./resources">
          <div class="h-full flex flex-col justify-between hover:text-blue-700 hover:border-4 rounded-xl p-4 hover:border-blue-700">
            <div>
              <!-- <p
                class="ml-5 hover:text-black group-hover:text-secondary/70 text-secondary text-9xl font-bold lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0">
                04.
              </p> -->
              <img src="src/images/reading.jpg" alt="Death of Socrates" class="mt-5 opacity-100 hover:opacity-70 rounded-3xl object-cover object-center overflow-hidden h-52 w-48 xl:h-72 xl:w-72 mb-5 ">

              <div class="ml-1">
              <p class="italic font-semibold shrink-0">RESOURCES</p>
              <p class="text-md mt-3 leading-relaxed">
               A collection of accessible philosophy resources,
               curated for high school students.
              </p>
              </div>
            </div>
            <div>
              <p class="ml-1 mt-3 text-md font-semibold">
                read the resources
              </p>
            </div>
          </div>
        </a>
      </li>
    </ul>
    </div>

    <div class="text-container text-4xl mt-2 text-blue-800">
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
      <div id="text" class="text-part"> dialexicon vol 3 </div>
    </div>

    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // eslint-disable-next-line no-undef
        gsap.to('.text-part', {
            xPercent: -100,
            repeat: -1,
            duration: 5,
            ease: "linear",
            })
            .totalProgress(0.5);
    </script>

    <style>
        .text-container {
          display: flex;
          width: fit-content;
          flex: auto;
          flex-direction: row;
        }

        .text-part {
          display: flex;
          align-items: center;
          flex-shrink: 0;
          padding:0 4px;
        }
    </style>
  

</Layout>
</div>